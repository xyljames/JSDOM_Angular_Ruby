

<%= simple_form_for @book,:html =>{ :multipart =>true} do |f| %>
 <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select 
 a Category") %>
<%= f.file_field :book_img %>
<%= f.input:title, label:"Book Title" %>
<%= f.input:description, label:"Add Book Description" %>
<%= f.input:author, label:"Add Author Information"%>
<%= f.button:submit%>


<% end%>